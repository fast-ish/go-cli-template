{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch CLI",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/${{values.name}}",
      "env": {},
      "args": ["--help"]
    },
{%- if values.aiProvider != "none" %}
    {
      "name": "AI Chat",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/${{values.name}}",
      "args": ["ai", "chat", "Hello"]
    },
{%- endif %}
    {
      "name": "Debug Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "args": ["-v"]
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0
    }
  ]
}
